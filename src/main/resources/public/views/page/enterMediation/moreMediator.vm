#extends("page/layout/mainDesHome.vm")
#block("content")
	<!-- 内容 -->
    <div class="mainHome-des-content">
    	<div class="wraper1200 wraper1000">
    		<div class="info-form">
    			<div class="steps">
    				<ul class="">
    					<li>1.填写纠纷信息</li>
    					<li>2.录制调解请求</li>
    					<li class="on"><span></span>3.选择调解员</li>
    					<li>4.完成调解申请</li>
    				</ul>
    			</div>
    			<!-- 筛选条件 -->
    			<div class="condition-area">
                    <div class="good-at posti-good">
                        <input type ="hidden" id="_fileName" value="$!fileName">
                        <input type ="hidden" id="_videoPath" value="$!videoPath">
                        <input type ="hidden" id="_scopeVal" value="$!scopeId">
                        <input type ="hidden" id="_idVal" value="$!identity">
                        <input type ="hidden" id="_goodVal" value="$!keyword">
                        <input type ="hidden" id="_areaVal" value="$!areaCode">
                        <div class="good-at-area fl">
                            <i></i><span>擅长领域：</span>$!scopeName
                        </div>
                    </div>
                    <div class="place-area fr">
                        <div class="btn" id="_chooseCity" data-flag="0">
                            <i class="place-icon"></i><span>地区：</span>
                            <a href="javascript:;">#if($!areaCode == "510100") 全市 #else $!areaName #end<i class="arrow-down"></i></a>
                        </div>
                        <div class="choose-city choose-city-r" style="display:none;">
                            <h3>地区</h3>
                            <ul class="ul-city clearfix" id="_city">
                                <li><a #if($!areaCode == "510100") class="on" #end data-code="" href="javascript:;">全市</a></li>
                            </ul>
                        </div>
                    </div>
    				<div class="condition">
    					<span class="name">身份：</span>
                        <div class="type" id="_identify">
                            <a #if($!identity == "" || !$!identity) class="on" #end data-code="" href="javascript:;">全部</a>
                            <a #if($!identity == "TJYSF_001") class="on" #end data-code="TJYSF_001" href="javascript:;">人民调解员</a>
                            <a #if($!identity == "TJYSF_008") class="on" #end data-code="TJYSF_008" href="javascript:;">法官</a>
                            <a #if($!identity == "TJYSF_006") class="on" #end data-code="TJYSF_006" href="javascript:;">法律工作者</a>
                            <a #if($!identity == "TJYSF_004") class="on" #end data-code="TJYSF_004" href="javascript:;">律师</a>
                            <a #if($!identity == "TJYSF_010") class="on" #end data-code="TJYSF_010" href="javascript:;">志愿者</a>
                            <a #if($!identity == "TJYSF_005") class="on" #end data-code="TJYSF_005" href="javascript:;">社区工作者</a>
                            <a #if($!identity == "TJYSF_009") class="on" #end data-code="TJYSF_009" href="javascript:;">专家学者</a>
                            <a #if($!identity == "TJYSF_007") class="on" #end data-code="TJYSF_007" href="javascript:;">热心人士</a>
                            <a #if($!identity == "TJYSF_002") class="on" #end data-code="TJYSF_002" href="javascript:;">行政调解员</a>
                            <a #if($!identity == "TJYSF_003") class="on" #end data-code="TJYSF_003" href="javascript:;">行业专家</a>
                            <a #if($!identity == "TJYSF_011") class="on" #end data-code="TJYSF_011" href="javascript:;">五老调解员</a>
                            <a #if($!identity == "TJYSF_255") class="on" #end data-code="TJYSF_255" href="javascript:;">其他社会调解员</a>
                        </div>
    				</div>
    				<div class="condition">
    					<span class="name">搜索：</span>
    					<div class="type">
    						<input class="search-input" id="_keyword" type="text" name="" value="$!keyword" placeholder="请输入调解员姓名">
    						<a class="search-btn" href="javascript:;" id="_search">搜索</a>
    						<i class="search-icon"></i>
    					</div>
    				</div>
    			</div>
    			<div class="altogether-num">$!{paging.totalCount}条数据</div>
    			<!-- 选择调解员 -->
	    		<div class="transcribe-area transcribe-area-padd">
	    			<div class="mediator-area chooseMed">
					#foreach($data in $!paging.list)
	    				<div class="mediator-bor chooseBtn" data-id="$!data.id">
	    					<span class="no-choose" data-flag="0"></span>
	    					<div class="head">
	    						<img src="$!data.picture">
	    					</div>
	    					<h1>#if($!data.name) $!data.name #else 暂无 #end</h1>
	    					<div class="place"><i></i>#if($!data.localName) $!data.localName #else 暂无 #end</div>
	    					<div class="mediation-num">
	    						<div class="half">
	    							<p>累计调解</p>
	    							<p class="num">$!data.mediatedCount</p>
	    						</div>
	    						<span class="line"></span>
	    						<div class="half">
	    							<p>正在调解</p>
	    							<p class="num">$!data.mediatingCount</p>
	    						</div>
	    					</div>
	    				</div>
					#end
	    			</div>
	    			<!-- 分页 -->
    				#if($!paging.list && $!paging.list.size() > 0)
                        <div class="pages">
                            <input type="hidden" value="$!paging.totalPage" id="totalPage"/>
                            <input type="hidden" value="$!paging.pageNumber" id="pageNumber"/>
                        </div>
                    #else
                        <div class="no-data">暂无数据</div>
                    #end
    				<div class="choose-btn">
    					<input class="" id="_chooseMed" type="button" value="选择TA" disabled>
    					<!-- <a class="on" href="javascript:;">选择TA</a> 选中加on-->
    				</div>
	    		</div>
    		</div>
    	</div>
    </div>

#end
#script()
    require(['page/enterMediation/moreMediator'], function(moreMediator) {
        new moreMediator();
    });
#end

